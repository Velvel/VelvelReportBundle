<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="velvel_report_list" pattern="/">
        <default key="_controller">VelvelReportBundle:Report:list</default>
    </route>

    <route id="velvel_report_show" pattern="/{reportId}/">
        <default key="_controller">VelvelReportBundle:Report:show</default>
    </route>

</routes>